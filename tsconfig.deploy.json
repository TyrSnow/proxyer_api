{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": false,
    "removeComments": true,
    "rootDir":"./",
    "outDir":"./dist",
    "watch": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./"
  },
  "include":[
    "./api/**/*.ts"
  ],
  "exclude":[
    "views",
    "static",
    "./api/**/*.spec.ts"
  ]
}